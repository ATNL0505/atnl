{
  "version": 2,
  "builds": [
    {
      "src": "chatbot-api.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/chatbot-api.js"
    },
    {
      "src": "/analytics-config",
      "dest": "/chatbot-api.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai-api-key",
    "VITE_GA_MEASUREMENT_ID": "@ga-measurement-id"
  }
}